import java.time.*
Date now = new Date()

process {
    errorStrategy = 'finish'
    withName: trim {
        container = 'docker://staphb/trimmomatic:0.39'
    }
}
singularity {
    enabled = true
}
params {
    dev            = false
    devinputs      = 2
    help           = false
    outfolder      = ""
    readsfolder    = "."
    threads        = 4
    tracedir       = '.trace'
    timestamp      = now.format('yyyyMMdd-HH-mm-ss')
    trimAdapters   = 'NexteraPE-PE.fa'
    trimMismatches = 2
    trimPclip      = 30
    trimClip       = 10
    trimWinsize    = 100
    trimWinqual    = 14
    trimLeading    = 14
    trimTrailing   = 14
    trimCrop       = 0
    trimHeadcrop   = 0
    trimMinlen     = 100
}
timeline {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_timeline.html"
}
report {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_report.html"
}
trace {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_trace.txt"
}
dag {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_dag.svg"
}
